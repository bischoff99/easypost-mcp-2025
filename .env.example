# EasyPost MCP Server 2025 - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# === Core Configuration ===
NODE_ENV=staging
PORT=3000
WEB_PORT=8080
HOST=0.0.0.0
LOG_LEVEL=debug

# === EasyPost API Configuration ===
EASYPOST_API_KEY=your_easypost_api_key_here
EASYPOST_TIMEOUT=30000
EASYPOST_RETRY_ATTEMPTS=3

# === Database & Cache ===
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3

# === Security ===
SESSION_SECRET=change_this_to_a_random_string_min_32_chars
JWT_SECRET=change_this_to_another_random_string
CORS_ORIGIN=http://localhost:8080,https://staging.yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# === Feature Flags ===
ENABLE_METRICS=true
ENABLE_COMPRESSION=true
ENABLE_RATE_LIMITING=true
ENABLE_WEBSOCKETS=true
ENABLE_FILE_UPLOAD=true

# === Rate Limiting ===
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# === Logging ===
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# === Monitoring & APM (Optional) ===
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_APP_NAME=easypost-mcp-staging

# === Email Configuration (Optional) ===
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@yourdomain.com

# === Deployment ===
DEPLOYMENT_WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# === Application Metadata ===
APP_VERSION=4.0.0
APP_NAME=EasyPost MCP Server 2025
BUILD_VERSION=
BUILD_DATE=
GIT_COMMIT=

# === Performance Tuning ===
WORKER_PROCESSES=0
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000

# === Storage (if using file uploads) ===
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# === WebSocket Configuration ===
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000
